<%- include("./../partials/header.ejs") %>
    <%- include("./../partials/navbar.ejs") %>

    <div class="container mt-5">
        <div class="card">
            <div class="card-header">Login de Admin</div>
            <div class="card-body">
                <form action="/user/authenticate" method="POST">
                    <label for="">E-mail</label>
                    <input type="email" class="form-control mb-3" name="email" placeholder="email@exemplo.com">
                    <label for="">Senha</label>
                    <input type="password" class="form-control mb-3" name="password" placeholder="Digite sua senha...">
                    <input type="submit" class="btn btn-block btn-primary" value="Logar">
                </form>
            </div>
        </div>
    </div>